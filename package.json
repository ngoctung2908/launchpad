{
  "name": "@fx/monorepo",
  "version": "1.0.0",
  "main": "index.js",
  "author": "HoanNN",
  "license": "MIT",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "watch": "lerna run --parallel watch",
    "build": "lerna run build",
    "start:web": "lerna run --scope @fx/react__web start --stream",
    "build:web": "lerna run --scope={@fx/common,@fx/web_common,@fx/webpack,@fx/react__common,@fx/react__redux,@fx/react__hook,@fx/react__web} build",
    "build:theme": "lerna run --scope={@fx/common,@fx/web_common,@fx/webpack,@fx/react__common,@fx/react__redux,@fx/react__hook,@fx/theme} build",
    "test": "lerna run test",
    "lint:fix": "lerna run lint:fix",
    "prepare": "husky install"
  },
  "dependencies": {
    "@types/react-table": "^7.7.8",
    "babel-loader": "8.2.3"
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@types/node": "^16.11.11",
    "eslint": "^8.4.0",
    "husky": "^7.0.2",
    "lerna": "^4.0.0",
    "lint-staged": "^12.1.2",
    "ts-node": "^10.2.1",
    "typescript": "~4.5.2",
    "webpack": "^5.64.4"
  },
  "workspaces": [
    "packages/**",
    "apps/**"
  ],
  "resolutions": {
    "babel-loader": "8.2.3"
  },
  "lint-staged": {
    "**/*.{ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  }
}
